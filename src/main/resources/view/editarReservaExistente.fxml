         </children>
      </VBox>
      <Button fx:id="buttomRegresarMenuAnterior" alignment="TOP_LEFT" layoutX="20.0" layoutY="11.0" mnemonicParsing="false" onAction="#clickButtomRegresarMenuAnterior" prefHeight="18.0" prefWidth="114.0" style="-fx-background-color: yellow;" text="Regresar al menu amterior">
         <font>
            <Font name="System Bold" size="8.0" />
         </font>
      </Button>
   </children>
