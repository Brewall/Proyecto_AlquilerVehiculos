         <children>
            <Label text="Editar una Reserva Existente">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <Label text="Reserva Existente" />
            <ComboBox fx:id="comboBoxReservaExistente" onAction="#clickComboBocReservaExistente" prefHeight="25.0" prefWidth="569.0" promptText="Seleccione una reserva existente" />
            <Label text="Cliente" />
            <ComboBox fx:id="comboBoxCliente" onAction="#clickComboBoxCliente" prefHeight="25.0" prefWidth="569.0" />
            <Label text="Vehiculo" />
            <ComboBox fx:id="comboBoxVehiculo" onAction="#clickComboBoxVehiculo" prefHeight="25.0" prefWidth="701.0" />
