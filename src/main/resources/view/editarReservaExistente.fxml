            <DatePicker fx:id="datePickerFechaInicio" onAction="#datePickerFechaInicio" />
            <TextField fx:id="textFieldHoraInicio" translateY="-25.0">
               <VBox.margin>
                  <Insets left="180.0" right="300.0" />
               </VBox.margin>
            </TextField>
            <Label text="Fecha y Hora de devolucion" />
            <DatePicker fx:id="datePickerFechaDevolucion" onAction="#clickDatePickerFechaDevolucion" />
            <TextField fx:id="textFieldHoraDevolucion" translateY="-25.0">
               <VBox.margin>
                  <Insets left="180.0" right="300.0" />
               </VBox.margin>
            </TextField>
